@model IEnumerable<Vidly.Models.Movie>
@*
    Comment TESTING
*@


<head>
    <title>Vidly - Customers</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .card {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            width: 40%;
            border-radius: 5px;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

        img {
            border-radius: 5px 5px 0 0;
        }

        .container {
            padding: 2px 16px;
        }
    </style>
</head>

<h2>List of Movies</h2>
@if (!Model.Any())
{
    <p>We don't have any movies yet.</p>
}
else
{
    <ol>
        <div class="card">
            <div class="container-lg">
                Movies
            </div>
        </div>

        @foreach (var movies in Model)
        {
            <div class="card">
                <div class="container-lg">
                    <li>@Html.ActionLink(movies.Name, "Details", "Movies", new { id = movies.Id }, null)</li>
                </div>
            </div>
        }
    </ol>
}

